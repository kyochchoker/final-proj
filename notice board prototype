notices = []

def show_board():
    print("=-=-= NOTICE BOARD =-=-=")
    if notices:
        for i, notice in enumerate(notices, 1):
            print(f"{i}. {notice}")
    else:
        print("(No notices)")
    print("=-=" * 8)

def add():
    print("=-=" * 8)
    notice = input("Enter notice: ")
    notices.append(notice)
    print("Notice Added!")

def remove():
    show_board()
    num = int(input("Remove which number?: "))
    notices.pop(num - 1)
    print("Notice has been removed!")

while True:
    show_board()
    print("[1] Add  [2] Remove a notice  [3] Quit")
    choice = input("Enter your choice: ")
    if choice == "1":
        add()
    elif choice == "2":
        remove()
    elif choice == "3":
        break
